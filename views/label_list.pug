extends layout.pug

block content
    div(class="card mt-4 p-2")
        form(class="row g-3 w-100" action="/label" method="post")
            div(class="col-auto")
                input(name="color" type="color" )
            div(class="col-auto")
                input(name="name" type="text" placeholder="label name")
            div(class="col-auto")
                input(name="description" type="text" placeholder="Description (optional)")
            div(class="col-auto")
                button(type="submit" class="btn btn-outline-primary") new
    ul(class="list-group mt-4")
        each label in labels
            li(class="list-group-item list-group-item-action d-flex justify-content-between")
                div(style="width:12px;height:12px;background:" + label.color + ";")
                div=label.name
                div=label.description
                div(class="d-flex")
                    button Edit
                    form(method="post" action="/label/delete")
                        input(type="hidden" value=label.id name="id")
                        button(type="submit") Delete
        else
            li(class="list-group-item") No labels created
